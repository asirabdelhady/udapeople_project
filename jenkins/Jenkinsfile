pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Frontend') {
            steps{
                script{
                    def frontendCacheDir = "${WORKSPACE}/frontend-cache"

                    sh '''
                    cd frontend/
                    npm install
                    npm run build
                    '''
                    
                    archiveArtifacts artifacts: 'dist/**', allowEmptyArchive: true
                    stash name: 'frontend-cache', includes: 'frontend-cache/**'

                    
                }
            }
        }

        stage('Build Backend'){
            steps{
                script{
                    def backendCacheDir = "${WORKSPACE}/backend-cache"

                    sh '''
                    cd backend/
                    npm install
                    npm run build
                    '''
                    
                    archiveArtifacts artifacts: 'dist/**', allowEmptyArchive: true
                    stash name: 'backend-cache', includes: 'backend-cache/**'

                    
                }
            }
        }
    }
}
