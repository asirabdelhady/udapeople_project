pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Frontend') {
            steps{
                    sh '''
                    cd frontend/
                    npm install
                    npm run build
                    '''
            }
        }

        stage('Archive Frontend Artifacts') {
            steps {
                archiveArtifacts artifacts: '*', allowEmptyArchive: true
            }
        }

        stage('Stash Frontend Cache') {
            steps {
                stash name: 'frontend-cache', includes: 'node_modules/**/*, *'
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed'
        }
}
